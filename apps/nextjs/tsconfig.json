{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "module": "preserve", // b/c we use "bundler" below
    "moduleResolution": "bundler", // b/c nextjs uses a bundler
    "jsx": "preserve",
    "outDir": "dist",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["app", "next-env.d.ts", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
